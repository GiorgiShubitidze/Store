@{
    @model SportsStoreNew.Service.Models.GetProductsReasponse

}

@{

    int Count = 1;
    if (Model.TotalCount % Model.PageSize == 0)
    {
        Count = Model.TotalCount / Model.PageSize;
    }
    else
    {
        Count = Model.TotalCount / Model.PageSize + 1;
    }

}
@{
    var Back = Model.Page - 1;
    if (Back == 0)
    {
        Back = 1;
    }

    var Next = Model.Page + 1;
    if (Model.Page >= Count)
    {
        Next = Count;
    }

}

<body style="background:whitesmoke">
    <div>

        <div class="container">

            <div class="row"style="min-height:550px">

                @foreach (var item in Model.Products)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="product-grid6">
                            <div class="product-image6">
                                <a href="@Url.Action("Details", new { Id = item.ProductId })">
                                    <img src="@item.ThumbnailUrl">
                                </a>
                            </div>

                            <div class=" ">
                                <a href="@Url.Action("Details", new { Id = item.ProductId })" style="text-decoration:none">
                                    <h3 class="title">@item.Name</h3>
                                    <div class="price">
                                        $@item.Price
                                        <span>$@item.DiscountPrice</span>
                                    </div>
                                </a>
                            </div>
                            <p class="button">
                                <a class="btn btn-primary product-content BtnColor " asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                                   asp-route-ProductId="@item.ProductId" asp-route-CategoryId="@item.CategoryId ">Add to cart</a>
                            </p>
                        </div>
                    </div>

                }

            </div>
        </div>
        <hr>

    </div>

    <footer>
        <nav aria-label="Page navigation example">
            <ul class="pagination  d-flex justify-content-md-start">

                <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@Back" asp-route-categoryName="@Model.CategoryName" asp-route-productName="@Model.ProductName"><<</a></li>
                @for (int i = 1; i <= Count; i++)
                {
                    <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@i" asp-route-categoryName="@Model.CategoryName" asp-route-productName="@Model.ProductName">@i</a></li>
                }

                <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@Next" asp-route-categoryName="@Model.CategoryName" asp-route-productName="@Model.ProductName">>></a></li>

            </ul>
        </nav>
    </footer>
</body>





<style>
    .product-grid6, .product-grid6 .product-image6 {
        overflow: hidden
    }

    .product-grid6 {
        font-family: 'Open Sans',sans-serif;
        text-align: center;
        position: relative;
        transition: all .5s ease 0s
    }

        .product-grid6:hover {
            box-shadow: 0 0 10px rgba(0,0,0,.3)
        }

        .product-grid6 .product-image6 a {
            display: block
        }

        .product-grid6 .product-image6 img {
            width: 240px;
            height: 160px;
            transition: all .5s ease 0s
        }

        .product-grid6:hover .product-image6 img {
            transform: scale(1.1)
        }

        .product-grid6 .product-content {
            transition: all .5s ease 0s;
            opacity: 0.09;
        }

        .product-grid6:hover .product-content {
            opacity: 1;
        }

        .product-grid6 .title {
            font-size: 20px;
            font-weight: 600;
            text-transform: capitalize;
            margin: 0 0 10px;
            transition: all .3s ease 0s;
            color: black;
        }

            .product-grid6 .title a {
                color: #000
            }

                .product-grid6 .title a:hover {
                    color: #2e86de
                }

        .product-grid6 .price {
            font-size: 18px;
            font-weight: 600;
            color: black;
        }

    .BtnColor {
        background-color: black;
        border-color: black;
    }

    .product-grid6 .price span {
        color: #999;
        font-size: 15px;
        font-weight: 400;
        text-decoration: line-through;
        margin-left: 7px;
        display: inline-block
    }

    .product-grid6 .social {
        background-color: #fff;
        width: 100%;
        padding: 0;
        margin: 0;
        list-style: none;
        opacity: 0;
        transform: translateX(-50%);
        position: absolute;
        bottom: -50%;
        left: 50%;
        z-index: 1;
        transition: all .5s ease 0s
    }

    .product-grid6:hover .social {
        opacity: 1;
        bottom: 20px
    }

    .product-grid6 .social li {
        display: inline-block
    }

        .product-grid6 .social li a {
            color: #909090;
            font-size: 16px;
            line-height: 45px;
            text-align: center;
            height: 45px;
            width: 45px;
            margin: 0 7px;
            border: 1px solid #909090;
            border-radius: 50px;
            display: block;
            position: relative;
            transition: all .3s ease-in-out
        }

            .product-grid6 .social li a:hover {
                color: #fff;
                background-color: #2e86de;
                width: 80px
            }

            .product-grid6 .social li a:after, .product-grid6 .social li a:before {
                content: attr(data-tip);
                color: #fff;
                background-color: #2e86de;
                font-size: 12px;
                letter-spacing: 1px;
                line-height: 20px;
                padding: 1px 5px;
                border-radius: 5px;
                white-space: nowrap;
                opacity: 0;
                transform: translateX(-50%);
                position: absolute;
                left: 50%;
                top: -30px
            }

            .product-grid6 .social li a:after {
                content: '';
                height: 15px;
                width: 15px;
                border-radius: 0;
                transform: translateX(-50%) rotate(45deg);
                top: -20px;
                z-index: -1
            }

            .product-grid6 .social li a:hover:after, .product-grid6 .social li a:hover:before {
                opacity: 1
            }

    .column {
        column-count: 4;
    }
</style>
