@{
    int Count = 1;
    if (Model.TotalCount % Model.PageSize == 0)
    {
        Count = Model.TotalCount / Model.PageSize;
    }
    else
    {
        Count = Model.TotalCount / Model.PageSize + 1;
    }

}
@{
    var Back = Model.Page - 1;
    if (Back == 0)
    {
        Back = 1;
    }

    var Next = Model.Page + 1;
    if (Model.Page >= Count)
    {
        Next = Count;
    }


}




<footer>
    <nav aria-label="Page navigation example">
        <ul class="pagination  d-flex justify-content-md-start">

            <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@Back"><<</a></li>
            @for (int i = 1; i <= Count; i++)
            {
                <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@i">@i</a></li>
            }

            <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@Next">>></a></li>

        </ul>
    </nav>
</footer>

