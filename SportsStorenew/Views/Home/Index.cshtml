@{
    @model SportsStorenew.Service.Models.GetProductsReasponse

}








    <div style="background-color:whitesmoke;margin:70px">


        <div class="row">

            @foreach (var item in Model.Products)
            {
                // @Html.ActionLink("Details", "Details", new { Id = item.ProductId })
                <div class="card col-3 mb-3 p-1">
                    <a href="@Url.Action("Details", new { Id = item.ProductId })">
                        <img class="card-img-top" src="@item.ThumbnailUrl " alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">  @Html.ActionLink(@item.Name, "Details", new { Id = item.ProductId }) </h5>
                            <p class="card-text">Price : @item.Price</p>
                        </div>
                    </a>
                </div>
            }


        </div>

        @{
            int Count = 1;
            if (Model.TotalCount % Model.PageSize == 0)
            {
                Count = Model.TotalCount / Model.PageSize;
            }
            else
            {
                Count = Model.TotalCount / Model.PageSize + 1;
            }

        }
        @{
            var Back = Model.Page - 1;
            if (Back == 0)
            {
                Back = 1;
            }

            var Next = Model.Page + 1;
            if (Model.Page >= Count)
            {
                Next = Count;
            }


        }

    </div>


    <footer>
        <nav aria-label="Page navigation example">
            <ul class="pagination  d-flex justify-content-md-start">

                <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@Back"><<</a></li>
                @for (int i = 1; i <= Count; i++)
                {
                    <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@i">@i</a></li>
                }

                <li class="page-item"><a class="page-link " asp-area="" asp-controller="Home" asp-action="index" asp-route-page="@Next">>></a></li>

            </ul>
        </nav>
    </footer>

